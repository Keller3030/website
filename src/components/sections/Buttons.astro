---
interface Props {
  buttons_content: {
    url: string;
    title: string;
    style: string;
  }[];
  style: string;
}
const { style, buttons_content } = Astro.props;
---

<div class:list={[style]}>
  {
    buttons_content.map(({ title, url, style: buttonStyle }) => {
      return (
        <a class:list={[buttonStyle, "uppercase rounded-sm"]} href={url}>
          {title}
        </a>
      );
    })
  }
</div>
